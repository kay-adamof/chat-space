%div{"data-message-id": "#{message.id}"}
  %p
    %span.main__body__message__userName
      = message.user.name
    %span.main__body__message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main__body__message__text
    - if message.content.present?
      %p
        = message.content
    =image_tag message.image.url, class: 'main__body__message__text__image' if message.image.present?
