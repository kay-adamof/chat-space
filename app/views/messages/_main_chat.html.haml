.main
  .main__header
    .main__header__group
      .main__header__group__name
        = @group.name
      .main__header__group__members
        %span
          = @group.users.map(&:name).join(" / ")
    .main__header__edit
      = link_to "edit", edit_group_path(@group.id)
  .main__body
    .main__body__message
      = render @messages
  .main__footer
    .main__footer__form
      .main__footer__form__input
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'main__footer__form__input__field', placeholder: 'type a message'
          = f.label :image do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
          = f.submit 'send', class: "main__footer__form__sendBtn"
